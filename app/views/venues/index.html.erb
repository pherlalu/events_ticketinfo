<div>
<h1 class="font-bold text-4xl">LOCATIONS</h1>

<% if @venues.any? %>
  <table class="table-auto w-full border-collapse border border-gray-200">
    <thead>
      <tr class="bg-gray-100">
        <th class="border border-gray-300 px-4 py-2">Venue Name</th>
        <th class="border border-gray-300 px-4 py-2">Events Count</th>
        <th class="border border-gray-300 px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @venues.each do |venue| %>
        <tr>
          <td class="border border-gray-300 px-4 py-2"><%= venue.name %></td>
          <td class="border border-gray-300 px-4 py-2"><%= venue.events.count %></td>
          <td class="border border-gray-300 px-4 py-2">
            <%= link_to 'Show Events', venue_path(venue), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @venues %>

<% else %>
  <p>No venues found.</p>
<% end %>
</div>