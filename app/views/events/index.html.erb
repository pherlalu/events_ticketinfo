<div class="container mx-auto max-w-full-md">
  <h1 class="font-bold text-4xl">EVENTS TO WATCH OUT FOR</h1>
  <h6 class="text-sm text-gray-500">Find tickets for concerts, sports, theater, family and more.</h6>
  <% if @events.any? %>
    <table class="table">
      <% @events.each_with_index do |event, index| %>
        <tr>
          <td>
            <div class="bg-white rounded-xl shadow-2xl overflow-hidden m-3 text-gray-800">
              <div class="md:flex">
                 <img class="h-48 w-full object-cover md:w-48" src="<%= event.image_url %>" alt="Event image">
                <div class="p-8 space-y-4">
                  <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold"><%= event.name %></div>
                  <p class="block mt-1 text-lg leading-tight font-medium text-black"><%= event.venue.name %></p>
                  <p class="mt-2 text-gray-500">Classification: <%= event.classifications.map(&:segment).join(', ') %></p>
                    <% if event.date_time %>
                      <p class=" text-gray-500"><%= event.date_time.strftime("%a · %B %e %Y · %I:%M %p") %></p>
                    <% else %>
                      <p class= text-gray-500">Date and time information not yet available.</p>
                    <% end %>
                  <button class="mt-5 px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    <%= link_to 'More Info', event, style: 'text-decoration: none; color: white;' %>
                  </button>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  <div class="flex items-center justify-center m-5 space-x-2">
    <%= paginate @events %>
  </div>
  <% else %>
    <p>No events found.</p>
  <% end %>
</div>
